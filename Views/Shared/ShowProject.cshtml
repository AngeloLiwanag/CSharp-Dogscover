@model Item

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootswatch/4.3.1/litera/bootstrap.min.css">
    <style>
        .col {
            display: inline-block;
            margin-left: auto;
            margin-right: auto;
        }

        body {
            margin-left: auto;
            margin-right: auto;
            height: 100vh;
        }
        
        a:hover {
        text-decoration: none;
        }

        .d-inline-block {
            margin-left: 100px;            
        }

        .container {
            max-width: 65%;
        }

        img {
            width: 120%;
            height: 120%;
            position: relative;
            right: 200px;
            
        }
    </style>

<div class="container">
    <div class="text-center mt-5">
        <h1>@Model.Name</h1>
        <br>
        <br>
    </div>
    <section class="main text-center">
        <div class="d-inline-block">
            <img class="m-5" src="@Model.ImageURL" alt="product" style="max-width: 35rem; max-height: 35rem;">
        </div>
        <div class="d-inline-block">
            <h4>Funding Progress</h4>
            <br>
            <div class="progress">
                <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar"
                    aria-valuenow="30" aria-valuemin="0" aria-valuemax="100" style="width: 30%"></div>
            </div>
            <p>Goal: $@Model.FundingGoal</p>
            
            <!-- Donation Amount: <input type="number" name="donation"><br> -->
            Potential Price: $@Model.Price
            <p class="text-danger">Donation amount must be greater than or equal to potential price</p>
            <br><br>
            <a href="/backproject/@Model.ItemId"><button class="btn btn-success">Back This Project</button></a>
            <a href="/"><button class="btn btn-success">Favorite this Item</button></a>
            
        </div>
        <hr>
        <div class="row">
            <div class="card text-white bg-success mb-3 col" style="max-width: 20rem;">
                <div class="card-body">
                    <h4 class="card-title">@Model.Brand</h4>
                    <p class="card-text">San Jose, CA</p>
                </div>
            </div>
        </div>
        <hr>
    </section>
    <section>
        <h4>About</h4>
        <p>@Model.Description</p>
    </section>
    <section>
        <p>Partials goes here but not working for some reason?</p>
    </section>
    @if(@Model.UserId == ViewBag.SessionId)
    {
    <div class="row">
        <div class="">
            <button class="btn btn-success" ><a style="color:white;" asp-action="Delete" asp-controller="Item" asp-route-id="@Model.ItemId">Delete Your Starter?</a></button>
        </div>
       <div class="">
            <button class="btn btn-success" ><a style="color:white;" asp-action="EditProject" asp-controller="Item" asp-route-id="@Model.ItemId">Update Your Project</a></button>
        </div>
    </div>
    }

</div>
