        #carouselExampleInterval {
            max-width: 100%;
            margin-left: auto;
            margin-right: auto;
        }

        .container {
            max-width: 65%;
            margin-left: auto;
            margin-right: auto;
        }
    </style>
</head>

<div class="banner">
    <img src="~/images/banner.png" alt="banner" class="rounded mx-auto d-block" class="banner">
</div>
<div id="carouselExampleInterval" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div id="carousel" class="carousel-item active" data-interval="10000">
            <img src="~/images/dog1.jpg" class="rounded mx-auto d-block carousel" alt="...">
        </div>
        <div id="carousel" class="carousel-item" data-interval="2000">
          <img src="~/images/dog2.jpg" class="rounded mx-auto d-block carousel" alt="...">
        </div>
        <div id="carousel" class="carousel-item">
            <img src="~/images/dog3.jpg" class="rounded mx-auto d-block carousel" alt="...">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleInterval" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="false"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleInterval" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="false"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
